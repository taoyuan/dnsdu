{
  "name": "dnsdu",
  "version": "1.0.2",
  "description": "A DNS Dynamic Updater",
  "license": "MIT",
  "repository": "https://github.com/taoyuan/dnsdu",
  "author": "Yuan Tao <towyuan@outlook.com>",
  "keywords": [
    "dns",
    "dynamic",
    "update"
  ],
  "files": [
    "lib",
    "bin"
  ],
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "bin": {
    "dnsdu": "./bin/dnsdu"
  },
  "scripts": {
    "clean": "rimraf lib",
    "format": "prettier --write \"{src,test}/**/*.ts\" --single-quote --trailing-comma es5",
    "prepublishOnly": "npm run build",
    "prebuild": "npm run clean && echo Using TypeScript && tsc --version",
    "build": "tsc --pretty",
    "test": "npm run build && nyc mocha --require ts-node/register --recursive \"test/**/*.test.ts\"",
    "docker-build": "dopkg && docker build -t dnsdu/dnsdu:latest .",
    "docker-push": "docker push dnsdu/dnsdu:latest",
    "docker-all": "npm run docker-build && npm run docker-push"
  },
  "dependencies": {
    "async-retry": "^1.2.3",
    "caporal": "^1.1.0",
    "dateformat": "^3.0.3",
    "dnsm": "^0.2.0",
    "external-ip": "^2.1.1",
    "fs-extra": "^7.0.1",
    "lodash": "^4.17.11",
    "pino": "^5.11.1",
    "pino-pretty": "^2.5.0",
    "to-time": "^1.0.2"
  },
  "devDependencies": {
    "@types/async-retry": "^1.2.1",
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/fs-extra": "^5.0.4",
    "@types/lodash": "^4.14.120",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.18",
    "@types/pino": "^5.8.4",
    "@types/sinon": "^7.0.5",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "dopkg": "^1.0.0",
    "isip": "0.0.1",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "prettier": "^1.16.1",
    "rimraf": "^2.6.3",
    "sinon": "^7.2.3",
    "ts-node": "^8.0.2",
    "typescript": "^3.2.4"
  },
  "engines": {
    "node": ">=10.0.0"
  }
}
